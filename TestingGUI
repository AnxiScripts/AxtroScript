local WindUI = loadstring(game:HttpGet("https://github.com/Footagesus/WindUI/releases/latest/download/main.lua"))()

WindUI:SetNotificationLower(true)

-- Optional: Discord link to copy
local discordLink = "https://discord.gg/FuHV5nFhcZ"

-- Show popup asking to join Discord
WindUI:Popup({
    Title = "Join Our Discord?",
    Icon = "rbxassetid://129260712070622",
    IconThemed = true,
    Content = "Would you like to join our Discord server for updates?",
    Buttons = {
        {
            Title = "No",
            Variant = "Secondary",
            Callback = function()
                -- do nothing
            end,
        },
        {
            Title = "Yes",
            Variant = "Primary",
            Callback = function()
                setclipboard(discordLink)
                WindUI:Notify({
                    Title = "Copied!",
                    Content = "Discord invite link copied to clipboard.",
                    Duration = 3
                })
            end,
        }
    }
})

-- Wait 3 seconds before showing the main UI
task.delay(3, function()
    local Window = WindUI:CreateWindow({
        Title = "Axtro | Testing",
        Icon = "crown",
        IconThemed = true,
        Author = "Axtro Hub",
        Folder = "CloudHub",
        Size = UDim2.fromOffset(580, 460),
        Transparent = true,
        Theme = "Dark",
        User = {
            Enabled = true,
            Callback = function() print("User profile clicked") end,
            Anonymous = true
        },
    })

    local homeTab = Window:Tab({
        Title = "Home",
        Icon = "house",
        Locked = false,
    })

    homeTab:Section({
    Title = "This script was created by Crowned.",
    TextXAlignment = "Center",
    TextSize = 17,
    })

    homeTab:Section({
    Title = "DISCLAIMER: Please join the Discord server to know if the script is undetected.",
    TextXAlignment = "Center",
    TextSize = 15,
    })

    homeTab:Section({
    Title = "If anything breaks, reload the script.",
    TextXAlignment = "Center",
    TextSize = 15,
    })

    homeTab:Section({
    Title = "More improvements coming soon!",
    TextXAlignment = "Center",
    TextSize = 15,
    })

    local mainTab = Window:Tab({
        Title = "Main",
        Icon = "hammer",
        Locked = false,
    })

    local teleportTab = Window:Tab({
        Title = "Teleport",
        Icon = "map-pin",
        Locked = false,
    })

    local miscTab = Window:Tab({
        Title = "Misc",
        Icon = "crown",
        Locked = false,
    })

    local experimentalTab = Window:Tab({
        Title = "Experimental",
        Icon = "crown",
        Locked = false,
    })

    Window:SelectTab(1)
end)
