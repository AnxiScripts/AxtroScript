-- Load the UI Library
local Library = loadstring(game:HttpGet("https://rscripts.net/raw/speed-hub-x-or-ui-library_1750275966261_YDZ4LJmVtv.txt", true))()

-- Create the main window
local Window = Library:CreateWindow("Merqury v1.3")

-- Create tabs
local MainTab = Window:CreateTab("Main")
local PlayerTab = Window:CreateTab("Player")
local SettingsTab = Window:CreateTab("Settings")

-- === Main Tab ===
MainTab:CreateButton("Kill All", function()
    for _, player in pairs(game.Players:GetPlayers()) do
        if player ~= game.Players.LocalPlayer then
            -- Replace with your actual kill logic
            print("Killing:", player.Name)
        end
    end
end)

MainTab:CreateToggle("Infinite Jump", function(state)
    if state then
        print("Infinite Jump Enabled")
        game:GetService("UserInputService").JumpRequest:Connect(function()
            game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping")
        end)
    else
        print("Infinite Jump Disabled")
        -- No easy way to disconnect unless using a variable
    end
end)

MainTab:CreateSlider("WalkSpeed", 16, 200, function(value)
    game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = value
end)

-- === Player Tab ===
PlayerTab:CreateButton("Fly", function()
    loadstring(game:HttpGet("https://pastebin.com/raw/YQK8AbzD"))() -- Example basic fly script
end)

PlayerTab:CreateToggle("Godmode", function(state)
    if state then
        local char = game.Players.LocalPlayer.Character
        if char and char:FindFirstChild("Humanoid") then
            char.Humanoid.Name = "1"
            local hum = char["1"]:Clone()
            hum.Parent = char
            hum.Name = "Humanoid"
            wait(0.1)
            char["1"]:Destroy()
            workspace.CurrentCamera.CameraSubject = char
            print("Godmode enabled")
        end
    else
        print("Godmode toggle off (requires rejoin to disable)")
    end
end)

PlayerTab:CreateButton("Teleport to Spawn", function()
    local spawn = workspace:FindFirstChild("SpawnLocation") or game.Workspace:FindFirstChildWhichIsA("SpawnLocation")
    if spawn then
        game.Players.LocalPlayer.Character:MoveTo(spawn.Position)
    else
        print("No spawn found.")
    end
end)

-- === Settings Tab ===
SettingsTab:CreateButton("Destroy GUI", function()
    game.CoreGui:FindFirstChild("ScreenGui"):Destroy()
end)

SettingsTab:CreateLabel("Made by Kenneth")


